# AstraFind Environment Configuration
# Development settings - modify for production

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1
ENVIRONMENT=development

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=astrafind
DATABASE_PASSWORD=astrafind_password
DATABASE_NAME=astrafind
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=20

# Elasticsearch Settings
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=astrafind
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3

# RabbitMQ Settings
RABBITMQ_URL=amqp://astrafind:astrafind_password@localhost:5672//

# ML Model Settings
ML_MODELS_PATH=./ml-models
BERT_MODEL_NAME=bert-base-multilingual-cased
T5_MODEL_NAME=t5-base
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Crawler Settings
CRAWLER_USER_AGENT=AstraFind-Bot/1.0 (+https://astrafind.com/bot)
CRAWLER_CONCURRENT_REQUESTS=32
CRAWLER_DOWNLOAD_DELAY=1.0
CRAWLER_RANDOMIZE_DELAY=0.5
CRAWLER_RESPECT_ROBOTS_TXT=true

# Rate Limiting Settings
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Search Settings
DEFAULT_SEARCH_RESULTS=10
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT_SECONDS=5

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cloud Storage Settings (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# GCP Settings (optional)
GCP_PROJECT_ID=
GCP_CREDENTIALS_PATH=
GCP_STORAGE_BUCKET=

# Monitoring Settings
SENTRY_DSN=
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Privacy & Compliance Settings
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=365
ANONYMIZE_IPS=true

# AI Ethics Settings
BIAS_DETECTION_ENABLED=true
MISINFORMATION_FILTER_ENABLED=true
CONTENT_SAFETY_THRESHOLD=0.8