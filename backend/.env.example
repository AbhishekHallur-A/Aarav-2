# AstraFind Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=4
SECRET_KEY=your-super-secret-key-change-this-in-production

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=astrafind
DATABASE_PASSWORD=astrafind_password
DATABASE_NAME=astrafind
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=20

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=astrafind
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3

# RabbitMQ Configuration
RABBITMQ_URL=amqp://astrafind:astrafind_password@localhost:5672//

# Machine Learning Models
ML_MODELS_PATH=./ml-models
BERT_MODEL_NAME=bert-base-multilingual-cased
T5_MODEL_NAME=t5-base
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Crawler Settings
CRAWLER_USER_AGENT=AstraFind-Bot/1.0 (+https://astrafind.com/bot)
CRAWLER_CONCURRENT_REQUESTS=32
CRAWLER_DOWNLOAD_DELAY=1.0
CRAWLER_RANDOMIZE_DELAY=0.5
CRAWLER_RESPECT_ROBOTS_TXT=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Search Settings
DEFAULT_SEARCH_RESULTS=10
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT_SECONDS=5

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cloud Storage (AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=astrafind-storage

# Cloud Storage (GCP)
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/credentials.json
GCP_STORAGE_BUCKET=astrafind-storage

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Privacy & Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=365
ANONYMIZE_IPS=true

# AI Ethics & Safety
BIAS_DETECTION_ENABLED=true
MISINFORMATION_FILTER_ENABLED=true
CONTENT_SAFETY_THRESHOLD=0.8

# Development Settings (only for local development)
ENABLE_DEBUG_TOOLBAR=true
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false